.list {
  padding: 20rpx 0 40rpx 10rpx !important;
}

.list .item {
  padding: 30rpx 60rpx 30rpx 10rpx;
  position: relative;
}

.list .item .icon {
  color: #999;
  font-size: 40rpx;
  transform: translateY(-50%);
  position: absolute;
  top: 50%;
  right: 10rpx;
}

.list .item .icon-checked {
  color: #27ba9b;
}

.list .item .text {
  font-size: 28rpx;
  color: #444;
}
